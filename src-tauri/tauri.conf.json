{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "GPO Fishing Macro",
  "version": "1.2.7",
  "identifier": "com.gpo.fishmacro",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "GPO Fish Macro",
        "width": 940,
        "height": 675,
        "resizable": true,
        "label": "main"
      },
      {
        "title": "Stats",
        "width": 300,
        "height": 200,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": false,
        "focusable": true,
        "shadow": false,
        "label": "stats",
        "url": "stats.html",
        "x": 100,
        "y": 100
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "Python314",
      "backend.py",
      "Sounds/*"
    ]
  }
}