{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Ks GPO Macros",
  "version": "../src/version.json",
  "identifier": "com.gpo.ksmacro",
  "build": {
    "frontendDist": "../src",
    "beforeBuildCommand": "",
    "beforeDevCommand": ""
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "launcher",
        "title": "K's Macros — Launcher",
        "url": "bootstrapper.html",
        "width": 520,
        "height": 605,
        "resizable": true,
        "decorations": false,
        "visible": true,
        "center": true
      },
      {
        "label": "hub",
        "title": "K's Macros — Hub",
        "url": "hub.html",
        "width": 860,
        "height": 560,
        "resizable": false,
        "decorations": false,
        "visible": false,
        "center": true
      },
      {
        "title": "K's Fishing Macro",
        "resizable": true,
        "visible": false,
        "url": "fish.html",
        "label": "fish"
      },
      {
        "title": "K's Juzo Macro",
        "resizable": true,
        "visible": false,
        "url": "juzo.html",
        "label": "juzo"
      },
      {
        "title": "Stats",
        "width": 300,
        "height": 200,
        "resizable": true,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": false,
        "focusable": true,
        "shadow": false,
        "label": "stats",
        "url": "stats.html",
        "x": 100,
        "y": 100
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "nsis",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "Python314",
      "backend.py",
      "sounds/*"
    ],
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "currentUser"
      }
    }
  },
  "plugins": {
    "installer": {
      "windows": {
        "nsis": {
          "customScript": "!macro customUnInstall\n  CopyFiles \"$INSTDIR\\Auto Fish Settings.json\" \"$TEMP\\Auto Fish Settings.json.backup\"\n  nsExec::Exec 'taskkill /F /IM pythonw.exe /T'\n  nsExec::Exec 'taskkill /F /IM python.exe /T'\n  Sleep 1000\n  RMDir /r \"$INSTDIR\"\n  IfFileExists \"$TEMP\\Auto Fish Settings.json.backup\" 0 +3\n    CreateDirectory \"$INSTDIR\"\n    CopyFiles \"$TEMP\\Auto Fish Settings.json.backup\" \"$INSTDIR\\Auto Fish Settings.json\"\n    Delete \"$TEMP\\Auto Fish Settings.json.backup\"\n!macroend"
        }
      }
    },
    "updater": {
      "endpoints": [
        "https://github.com/K3nD4rk-Code-Developer/Grand-Piece-Online-Fishing/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDZFRDA3NzIzMEJFQzQ2NkIKUldSclJ1d0xJM2ZRYm9HbGJ3amZSeS9lM3QzdFFtVEp2T3pWdDBSdEp2Wjc2cDJUWndoTkFSZ3kK"
    }
  }
}