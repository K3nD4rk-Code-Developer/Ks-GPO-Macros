{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Ks Fishing Macro",
  "version": "../src/version.json",
  "identifier": "com.gpo.fishmacro",
  "build": {
    "frontendDist": "../src",
    "beforeBuildCommand": "",
    "beforeDevCommand": ""
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "launcher",
        "title": "K's Macros — Launcher",
        "url": "bootstrapper.html",
        "width": 520,
        "height": 700,
        "resizable": false,
        "decorations": false,
        "visible": true,
        "center": true
      },
      {
        "label": "hub",
        "title": "K's Macros — Hub",
        "url": "hub.html",
        "width": 860,
        "height": 560,
        "resizable": false,
        "decorations": false,
        "visible": false,
        "center": true
      },
      {
        "title": "K's Fishing Macro",
        "resizable": true,
        "visible": false,
        "url": "main.html",
        "label": "main"
      },
      {
        "title": "Stats",
        "width": 300,
        "height": 200,
        "resizable": true,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": false,
        "focusable": true,
        "shadow": false,
        "label": "stats",
        "url": "stats.html",
        "x": 100,
        "y": 100
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "nsis",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "Python314",
      "backend.py",
      "Sounds/*"
    ],
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "currentUser"
      }
    }
  },
  "plugins": {
    "installer": {
      "windows": {
        "nsis": {
          "customScript": "!macro customUnInstall\n  CopyFiles \"$INSTDIR\\Auto Fish Settings.json\" \"$TEMP\\Auto Fish Settings.json.backup\"\n  RMDir /r \"$INSTDIR\"\n  IfFileExists \"$TEMP\\Auto Fish Settings.json.backup\" 0 +3\n    CreateDirectory \"$INSTDIR\"\n    CopyFiles \"$TEMP\\Auto Fish Settings.json.backup\" \"$INSTDIR\\Auto Fish Settings.json\"\n    Delete \"$TEMP\\Auto Fish Settings.json.backup\"\n!macroend"
        }
      }
    }
  }
}